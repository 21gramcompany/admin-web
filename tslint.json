{
    "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
    "rulesDirectory": ["tslint-plugin-prettier"],
    "rules": {
        "max-line-length": [true, 120],
        "import-name": false,
        "variable-name": false,
        "strict-boolean-expressions": false,
        "no-this-assignment": [true, {"allowed-names": ["^self$"], "allow-destructuring": true}],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "linterOptions": {
        "exclude": [
            ".nuxt/**/*",
            "build/**/*"

        ]
    }
}